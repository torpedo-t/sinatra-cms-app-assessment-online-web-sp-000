<% if current_user(session) %>
    <form method="post" action="/videos/<%= @video.id %>">
        <input type="hidden" name="_method" id="hidden" value="PATCH">
        <label for="video_name">Name:</label>
        <input type="text" name="name" id="video_name" value="<%= @video.name %>"><br><br>
        <label for="video_category">Category:</label>
        <input type="text" name="category" id="video_category" value="<%= @video.category%>">
    <br><br>
        <input type="submit" name="submit" value="Edit video">
    </form>
<% else %>
    <a class="button" href="/login">You must be logged in to edit a video.</a>
<% end %>